public class Directory implements Subject<Entry> {
    private List<Directory> observerList = new LinkedList<Directory>();
    

	public void addObserver(Observer<Entry> o) {
		// TODO Auto-generated method stub
		observerList.add((Directory) o);
	}

	public void notifyObservers(Entry o) {
		// TODO Auto-generated method stub
		for (@SuppressWarnings("unused") Entry child : o.getChildren()) {
		    update(o);
		}
	}
}