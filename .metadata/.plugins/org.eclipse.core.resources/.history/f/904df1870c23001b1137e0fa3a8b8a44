package task4;

public class IndentObserver implements Observer<Entry> {
	
	private int countDepth(Entry e) {
        // 木構造eの中のEntryの数を返す．
		int depth = 1;
		for (Entry child : e.getChildren()) {
			if (e.getChildren() != null) {
				depth += countDepth(child);
			}
		}
		return depth;
    }
	
	
//	private int countEntries(Entry e) {
